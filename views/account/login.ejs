<h1 id="h1-login"><%= title %></h1>
<%- messages() %>

<form id="loginForm" action="/account/login" method="post">
  <div>
    <label for="email">Email Address:</label>
    <input type="email" id="email" name="account_email" required />
  </div>
  <div>
    <label for="password">Password:</label>
    <input type="password" id="password" name="account_password" required />
    <p id="passwordRequirements">
      Password must be minimun of 12 Characters and include 1 capital letter, 1
      number and 1 special character
    </p>
  </div>
  <button type="submit">Login</button>
</form>

<p>No account? <a href="/account/register">Sign-up</a></p>
